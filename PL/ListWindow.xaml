<Window x:Class="PL.ListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Icon="images\icon.png"
        WindowState="Maximized"
        Title="ListWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.035*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
    <TabControl x:Name="ListTabControl" Grid.Row="0" SelectionChanged="ListTabControl_SelectionChanged">
        <TabItem Name="ListDrones" Header="List drones" Width="199"/>
        <TabItem Name="ListStations" Header="List stations" Width="199"/>
        <TabItem Name="ListCustomers" Header="List customers" Width="199"/>
        <TabItem Name="ListParcels" Header="List parcels" Width="199"/>
    </TabControl>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Frame x:Name="ShowList" Grid.Column="0" NavigationUIVisibility="Hidden"/>
            <Frame x:Name="ShowData" Grid.Column="1" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
