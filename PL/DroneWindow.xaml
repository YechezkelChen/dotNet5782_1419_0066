<Window x:Class="PL.DroneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="DroneWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Name="IdGrid" Height="auto" Grid.Row="0" Width="auto" Grid.ColumnSpan="2" Margin="-34,-5,34,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Name="TextId" Content="Please enter id of the drone:" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBox x:Name="GetId" Grid.Column="1" HorizontalAlignment="Center" Text="" TextWrapping="Wrap" VerticalAlignment="Center" Width="120"/>
        </Grid>
        <Grid Name="ModelGrid" Height="auto" Grid.Row="1" Width="auto" Grid.ColumnSpan="2" Margin="-34,-5,34,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Name="TextModel" Content="Please enter model of the drone:" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBox x:Name="GetModel" Grid.Column="1" HorizontalAlignment="Center" Text="" TextWrapping="Wrap" VerticalAlignment="Center" Width="120"/>
        </Grid>
        <Grid Name="WeightGrid" Height="auto" Grid.Row="2" Width="auto" Grid.ColumnSpan="2" Margin="-34,-5,34,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Name="TextWeight" Content="Please choose Weight of the drone:" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <ComboBox Name="GetWeight" Grid.Column="1" HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Top" Width="120"/>
        </Grid>
        <Grid Name="StationGrid" Height="auto" Grid.Row="3" Width="auto" Grid.ColumnSpan="2" Margin="-34,-5,34,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Name="TextStation" Content="Please choose station to put the drone in charge:" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <ComboBox Name="GetStation" Grid.Column="1" HorizontalAlignment="Center" Margin="0,34,0,0" VerticalAlignment="Top" Width="120"/>
        </Grid>
        <Button x:Name="Continue" Content="Continue" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Continue_Click"/>
    </Grid>
</Window>
