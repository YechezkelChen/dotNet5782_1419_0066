<Window x:Class="PL.DroneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="DroneWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Name="IdGrid" Height="auto" Grid.Row="0" Width="auto" Grid.ColumnSpan="2" Margin="-34,-5,34,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Name="TextIdLabel" Content="Please enter id of the drone:" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBox x:Name="GetId" Grid.Column="1" HorizontalAlignment="Left" Text="" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" Margin="234,0,0,0"/>
        </Grid>
        <Grid Name="ModelGrid" Height="auto" Grid.Row="1" Width="auto" Grid.ColumnSpan="2" Margin="-34,-5,34,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Name="TextModelLabel" Content="Please enter model of the drone:" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,32,0,0"/>
            <TextBox x:Name="GetModel" Grid.Column="1" HorizontalAlignment="Left" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="233,36,0,0"/>
        </Grid>
        <Grid Name="WeightGrid" Height="auto" Grid.Row="2" Width="auto" Grid.ColumnSpan="2" Margin="-34,-5,34,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Name="TextWeightLabel" Content="Please choose Weight of the drone:" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <ComboBox Name="GetWeight" Grid.Column="1" HorizontalAlignment="Left" Margin="233,0,0,0" VerticalAlignment="Center" Width="120"/>
        </Grid>

        <Grid Name="StationGrid" Height="auto" Grid.Row="3" Width="auto" Grid.ColumnSpan="2" Margin="-34,-5,34,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Name="TextStationLabel" Content="Please choose station to put the drone in charge:" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <ComboBox Name="GetStation" Grid.Column="1" HorizontalAlignment="Left" Margin="233,34,0,0" VerticalAlignment="Top" Width="120"/>
        </Grid>

        <Button x:Name="AddButton" Content="Add" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Center" Height="50" Width="150" Click="AddButton_Click"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Right" Grid.Row="4" VerticalAlignment="Center" Height="50" Width="150" Click="CancelButton_Click"/>
        <Button x:Name="CloseWindowButton" Content="Close window" HorizontalAlignment="Center" VerticalAlignment="Center"  Grid.Row="4" Height="50" Width="186" Click="CloseWindowButton_Click"/>

        <Button x:Name="UpdateModelButton" Content="Update model drone" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="0" Width="200" Height="50" Click="UpdateModelButton_Click"/>
        <Button x:Name="SendToChargeButton" Content="Send drone to charge" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="0" Width="200" Height="50" Click="SendToChargeButton_Click"/>
        <Button x:Name="RealeseFromChargeButton" Content="Realese drone from charge" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Width="200" Height="50" Click="RealeseFromChargeButton_Click"/>
        <Button x:Name="SendToDeliveryButton" Content="Send drone to delivery" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="2" Width="200" Height="50" Click="SendToDeliveryButton_Click"/>
        <Button x:Name="CollectParcelButton" Content="Collect parcel by the drone" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="4" Width="200" Height="50" Click="CollectParcelButton_Click"/>
        <Button x:Name="SupplyParcelButton" Content="Supply parcel by the drone" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="4" Width="200" Height="50" Click="SupplyParcelButton_Click"/>
        <Label Name="DataDroneLabel" HorizontalAlignment="Left" Margin="255,43,0,0" VerticalAlignment="Top" Height="291" Width="340" Grid.RowSpan="4"/>
        <Label Name="HoursOfChargeLabel" Content="Enter the amount of the drone was in charge:" HorizontalAlignment="Left" Margin="0,86,0,0" VerticalAlignment="Top" Width="289" Grid.Row="2" Grid.RowSpan="2" RenderTransformOrigin="0.5,0.5"/>
        <TextBox x:Name="HoursOfChargeTextBox" Text="" HorizontalAlignment="Left" Margin="40,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Row="3"/>
        <Label Name="TextUpdateModelLabel" Content="Please enter model of the drone to update:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,81,0,0" Grid.RowSpan="2" Width="238" Height="26"/>
        <TextBox x:Name="GetUpdateModelTextBox" HorizontalAlignment="Left" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="40,25,0,0" Grid.Row="1"/>
    </Grid>
</Window>