<Page x:Class="PL.DroneListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="DroneListWindow">

    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="30*" x:Name="MiddleRow"/>
            <RowDefinition Height="400*"/>
        </Grid.RowDefinitions>
        <Grid Name="UpGrid" Grid.Row="0">
            <Grid.Background>
                <ImageBrush ImageSource="images\upGrid.jpg"/>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="StatusLabel" Content="Choose a status :" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="110" Foreground="#FF2F3E46" FontSize="16" FontFamily="Agency FB" FontWeight="Bold" FontStyle="Normal"/>
            <ComboBox Name="StatusSelctor" HorizontalAlignment="Center" VerticalAlignment="Top" Height="30" Width="110" Grid.Column="0" Grid.ColumnSpan="2" SelectionChanged="StatusSelctor_SelectionChanged" Foreground="#FF2F3E46" FontSize="16" FontFamily="Agency FB" FontStyle="Italic"/>

            <Label x:Name="WeightLabel" Content="Choose a weight :" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="30" Width="110" Foreground="#FF2F3E46" FontSize="16" FontWeight="Bold" FontFamily="Agency FB"/>
            <ComboBox Name="WeightSelctor" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="30" Width="110" Grid.Column="0" Grid.ColumnSpan="2" SelectionChanged="WeightSelctor_SelectionChanged" Foreground="#FF2F3E46" FontSize="16" FontFamily="Agency FB" FontStyle="Italic"/>

            <Button x:Name="RefreshStatusButton" Content="Refresh status" HorizontalAlignment="Right" VerticalAlignment="Top" Height="30" Width="110"  Grid.Column="1" Click="RefreshStatusButton_Click" Foreground="#FF6B0F1A" FontSize="16" FontFamily="Agency FB" FontWeight="Bold" FontStyle="Italic"/>
            <Button x:Name="RefreshWeightButton" Content="Refresh weight" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="30" Width="110"  Grid.Column="1" Click="RefreshWeightButton_Click" Foreground="#FF6B0F1A" FontSize="16" FontFamily="Agency FB" FontWeight="Bold" FontStyle="Italic"/>

            <Button x:Name="AddDroneButton" Content="Add a drone" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2" Click="AddDrone_Click" Foreground="#2F3E46" FontSize="16" FontFamily="Agency FB" FontWeight="Bold" FontStyle="Italic" Height="40" Width="100"/>

            <Button x:Name="ClosePageButton" Content="Close Page" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Click="ClosePageButton_Click" Background="White" Foreground="Red" FontFamily="Agency FB" FontSize="16" FontWeight="Bold" FontStyle="Italic" Height="40" Width="100"/>
        </Grid>

        <Label Content="List Drones:" Background="White" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Height="auto" Width="800" FontFamily="Agency FB" FontSize="20" FontWeight="Bold" FontStyle="Italic" Foreground="#2F3E46" HorizontalContentAlignment="Center"/>

        <ListView x:Name="DronesListView" Grid.Row="2" Background="DarkGray" MouseDoubleClick="DronesListView_MouseDoubleClick" Foreground="#2F3E46" FontFamily="Agency FB" FontSize="20" FontWeight="Normal">
            <ListView.View>
                <GridView AllowsColumnReorder="True" ColumnHeaderToolTip="information">
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Id}" Header="ID" Width="70"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Model}" Header="Model" Width="80"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Weight}" Header="Weight" Width="80"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Battery}" Header="Battery" Width="70"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Status}" Header="Status" Width="100"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=IdParcel}" Header="Parcel in delivery" Width="120"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Location}" Header="Location" Width="260"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
